<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity1"
        android:id="@+id/button1"
        android:onClick="onClick_activity1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity2"
        android:id="@+id/button2"
        android:onClick="onClick_activity2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity3"
        android:id="@+id/button3"
        android:onClick="onClick_activity3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity4"
        android:id="@+id/button4"
        android:onClick="onClick_activity4" />

</LinearLayout>
